<tr id="<%= link.id %>">
	<td width="95%" class="list-item">
		<div class="list-header">
			<%= link_to link.short_name, view_link_path(link), :class => 'link'%>&nbsp;&nbsp;
		</div>
		<div class="list-body">
			<%= link.blurb %>
		</div>
		<div class="list-footer">
			Added by <%= User.find_by_id(link.user_id).login %> <%= time_ago(link.created_at)%>
		</div>
	</td>
	<td width="5%" class="list-item">
		<% if logged_in? && @user && @user.id == current_user.id then -%>
			<%= link_to '(remove)', delete_link_path(link), :id => ('link_remove-' + link.id.to_s), :style => 'display:none', :class => 'link_remove' %>
		<% end -%>
	</td>
</tr>
<script type="text/javascript">
	$(document).ready(function() {
		$("#<%= link.id.to_s %>").hover(function() {
		    $("#link_remove-<%= link.id.to_s %>").css("display", "inline");
		},
		function() {
		    $("#link_remove-<%= link.id.to_s %>").css("display", "none");
		});
	});
</script>
