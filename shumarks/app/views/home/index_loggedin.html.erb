<div style="float:left; width:80%;">
	<%= render '/links/index' %>
</div>


<div style="float:right; width:20%; text-align:right;">
	<h4>Following <%= current_user.users.length %> people</h4>
	<% for following in current_user.users -%>
		<div>
			<%= link_to "#{following.login} (#{following.links.length})", queue_path(following.login)%>
		</div>
	<% end -%>
</div>

<div style="clear:both"></div>

<span class="sm-twitter"></span>Login with Twitter
<span class="sm-facebook"></span>Login with Facebook
